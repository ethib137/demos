<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#0B5FFF</item>
        <item name="colorPrimaryDark">#0B5FFF</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textStyle">bold</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="TransparentTheme" parent="lexicon_theme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="MenuItemTextTheme" parent="lexicon_theme">
        <item name="android:textColor">@drawable/item_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
